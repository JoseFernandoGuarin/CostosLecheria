<section class="container">
  <h1>Alimentación</h1>

  <div class="group">
    <h2>Forrajes</h2>

    <label>Consumo de forraje (kg MS/vaca/día)</label>
    <input type="number" id="forraje_cant" value="12" step="0.1">

    <label>Costo del forraje ($/kg MS)</label>
    <input type="number" id="forraje_costo" value="450" step="10">
  </div>

  <div class="group">
    <h2>Concentrado</h2>

    <label>Consumo de concentrado (kg MS/vaca/día)</label>
    <input type="number" id="conc_cant" value="6" step="0.1">

    <label>Costo del concentrado ($/kg MS)</label>
    <input type="number" id="conc_costo" value="1800" step="50">
  </div>

  <div class="group">
    <h2>Suplementos minerales</h2>

    <label>Consumo de minerales (kg/vaca/día)</label>
    <input type="number" id="min_cant" value="0.12" step="0.01">

    <label>Costo de minerales ($/kg)</label>
    <input type="number" id="min_costo" value="3200" step="100">
  </div>

  <div class="results">
    <h2>Costos de alimentación</h2>
    <p><strong>Costo diario por vaca:</strong> $<span id="costoVaca">0</span></p>
    <p><strong>Costo diario total:</strong> $<span id="costoTotal">0</span></p>
  </div>

  <p class="note">
    Los costos se calculan a partir de consumos físicos y precios unitarios.
    Los valores precargados corresponden a un sistema de referencia.
  </p>
</section>

<script>
  function calcularAlimentacion() {
    const vacas = parseFloat(document.getElementById("inv_ordeño")?.value) || 120;

    const forraje = (document.getElementById("forraje_cant").value || 0) *
                    (document.getElementById("forraje_costo").value || 0);

    const conc = (document.getElementById("conc_cant").value || 0) *
                 (document.getElementById("conc_costo").value || 0);

    const min = (document.getElementById("min_cant").value || 0) *
                (document.getElementById("min_costo").value || 0);

    const costoVaca = forraje + conc + min;
    const costoTotal = costoVaca * vacas;

    document.getElementById("costoVaca").innerText = costoVaca.toFixed(0);
    document.getElementById("costoTotal").innerText = costoTotal.toFixed(0);
  }

  document.querySelectorAll("input").forEach(input => {
    input.addEventListener("input", calcularAlimentacion);
  });

  calcularAlimentacion();
</script>
